<div class="list-group-item list-group-item-custom">
  <div class="row">

    <div class="col-xs-4 fixed-width">
      <div class="portrait-img content-img-popular popular-img" style="background-image: url(<%= workshop.thumbnail_image %>)"></div>
    </div>
    <div class="col-xs-8 col-xs-6-custom content-heading span">
      <h3><%= link_to workshop.title, link_route %></h3>

      <small class="workshop-thanksto">
        <%= "Thanks to #{workshop.full_name}" if workshop.full_name %><br/>
        <%= "In #{workshop.windows_type_name.gsub(" WORKSHOP LOG", "'s windows").titleize if !workshop.windows_type.nil?}"  %>
      </small>

      <p class="workshop-description">
        <%= truncate(workshop.description, :length => 240, :omission => '... ', :separator => ' ') %>
      </p>
    </div>

    <div class="col-xs-1">
      <div class='btn-bookmark pull-right'>
        <%= image_tag("bookmark.png", class:"img-responsive") %>
      </div>
    </div>


  </div>

</div>
