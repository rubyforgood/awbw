<section>
  <h2 class="no-margin-top normal section-title"><%= "Featured Workshops" %></h2>
  <div class="row flex-row" style="padding-top:0;">
    <% workshops.each do |workshop| %>
      <div class="col-xs-6 col-xs-6-custom">
        <div class="workshop-box">
          <div class="content-img">
            <%= link_to workshop_path(workshop) do %>
              <figure class="portrait-img" style="background-image: url(<%= workshop.thumbnail_image %>)"></figure>
            <% end %>
          </div>
          <div class="inner-content">
            <h3><%= workshop.title %></h3>
            <span><%= workshop.windows_type.label if workshop.windows_type %></span>
            |
            <span><%= workshop.date if workshop.date %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
