<div class="printable-area">
  <h2 class="normal"> Change your current password </h2>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <%= form_tag "/users/#{@user.id}/update_password" do |f|%>
      <div class="form-group">
        <%= label_tag :current_password %>
        <%= password_field_tag :current_password,"", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "New Password" %>
        <%= password_field_tag :password,"",  class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password_confirmation %>
        <%= password_field_tag :password_confirmation,"", class: "form-control" %>
      </div>
      <%= submit_tag 'Change Password', class: "btn btn-primary btn-blue" %>
     <% end %>
   </div>
 </div>
</div>
