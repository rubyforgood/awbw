<% metadata.each do |metadatum, categories| %>
  <div class="categories-fields-wrapper">
    <div class="categories-header">
      <label>
        <%= metadatum.display_name %>
      </label>
      <%= image_tag("collapse-arrow.png", class:"arrow-down") %>
    </div>
    <div class="categories-fields">
      <% metadatum.categories.each do |category| %>

        <div class="input-group">
          <%= check_box_tag "categories[#{category.id}]", category.id,
           (!params[:categories].nil? and params[:categories]["#{category.id}" ] == category.id.to_s), {} %>
          <span class="small">
            <%= category.name %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
