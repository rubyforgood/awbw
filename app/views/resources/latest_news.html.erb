<div class="container-fluid search-curriculum-page resources-page">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <div class="filter-wrapper">
        <% if params[:kind] != "Scholarship" %>
          <div class="small-gray-title">Filter By:</div>
          <%= render 'shared/sortable_fields_btn', sortable_fields: @sortable_fields %>
      </div>
<% end %>
</div>
<% end %><!-- filter_by row -->
</div>

<div class="row result-title">
  <div class="col-md-12 col-lg-8 width">
    <h2 class="normal">Results</h2>
  </div>
</div><!-- result title-->

<div class="row">
  <div class="col-md-12 col-lg-12 width" >
    <% if @stories.any? %>
      <table width="80%" class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="resources-list">
          <% @stories.each do |r| %>
            <%= render 'resource', resource: r %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      There are no resources that match your search.  Please try again.
    <% end %>
  </div>

  <div id="infinite-scrolling" class="hide">
    <%= will_paginate %>
  </div>

  <% if @resources.next_page %>
    <div class="btn_container">
      <div id="load_more" class="btn btn-primary btn-lg">
        Load More
      </div>
    </div>
  <% end %>

</div><!-- result row -->

</div><!-- container-fluid -->

</div>  
