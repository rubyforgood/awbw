<div class="row" style="padding:0px;" >
  <div class="col-md-12 col-sm-12 container-custom-dashboard">
    <section>
      <h2 class="no-margin-top custom-h2 section-title normal">
        <%= title %>
      </h2>
      <% if resources.any? %>
        <div class="row">
          <div class="col-xs-12">
          <% resources.each do |resource| %>
            <div class="col-md-6 col-xs-6-custom">
              <div class="workshop-box population-workshop-box">
                <%= link_to resource.featured_url do %>
                  <% unless resource.kind == 'Theme' %>
                    <figure class="portrait-img content-img-popular population-img"
                            style="background-image: url(<%= resource.main_image %>);">
                    </figure>
                    <div class="inner-content">
                      <h3 class="h3-footer-custom">
                        <%= resource.title %>
                      </h3>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
          </div>
        </div>
      <% else %>
        <%= "There are no resources." %>
      <% end %>
    </section>
  </div>
</div>
